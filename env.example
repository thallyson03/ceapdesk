DB_PASSWORD=postgres
DB_NAME=sistema_tickets
DB_HOST=localhost
DB_PORT=5432

# 🌐 CONFIGURAÇÕES DE CORS
# URLs permitidas separadas por vírgula (use apenas HTTPS em produção)
