# Configurações do Servidor
PORT=3000
NODE_ENV=development
FORCE_HTTPS=false

# 🔐 CONFIGURAÇÕES DE SEGURANÇA (OBRIGATÓRIAS)
# Gere uma chave secreta forte: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SECRET_KEY=sua_chave_secreta_forte_aqui

# Configurações do Banco de Dados PostgreSQL (OBRIGATÓRIAS)
DB_USER=postgres
DB_PASSWORD=sua_senha_postgres
DB_NAME=sistema_tickets_dev
DB_HOST=localhost
DB_PORT=5432

# 🌐 CONFIGURAÇÕES DE CORS
# URLs permitidas separadas por vírgula
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 🚦 CONFIGURAÇÕES DE RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 🔑 CONFIGURAÇÕES DE JWT
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# 🔒 CONFIGURAÇÕES DE SENHA
MIN_PASSWORD_LENGTH=8
REQUIRE_PASSWORD_COMPLEXITY=true

# 📝 CONFIGURAÇÕES DE LOGGING
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 👤 CONFIGURAÇÕES DE ADMIN (OPCIONAL)
ADMIN_PASSWORD=admin123

# 📧 CONFIGURAÇÕES DE EMAIL (OPCIONAL)
RESEND_API_KEY=re_sua_chave_api_aqui
FROM_EMAIL=noreply@seudominio.com
FROM_NAME=Sistema de Tickets

